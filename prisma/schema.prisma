// }

model Hero {
  id       Int     @id @default(autoincrement())
  number   Int?
  position String
  text     String
  hText    String? @unique
  desc     String?
}

model User {
  id       Int     @id @default(autoincrement())
  name     String
  username String
  job      String?
  token    String? @db.VarChar(100)
  avatar   String
  bio      String? @db.Text
  // portofolios Portofolio[]
}

model Partnership {
  id    Int     @id @default(autoincrement())
  name  String?
  image String
}

model noiu_in_number {
  id        Int @id @default(autoincrement())
  client    Int
  produk    Int
  pekerjaan Int
  tim       Int
}

// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Product {
  id    Int    @id @default(autoincrement())
  title String @unique
  desc  String @db.Text
  image String
}

model Service {
  id    Int     @id @default(autoincrement())
  title String
  desc  String? @db.Text
  link  String
  logo  String
}

model Testimony {
  id       Int    @id @default(autoincrement())
  username String
  location String
  comment  String @db.Text
  star     Float
  avatar   String
}

// enum Position {
//   Left
